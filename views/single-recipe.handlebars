<div class="single-recipe-box">
  <section class="recipe-top">
    <div class="recipe-image-box">
      <img
        class="recipe-image"
        src="https://hips.hearstapps.com/hmg-prod.s3.amazonaws.com/images/goulash-1640024815.jpeg?crop=1.00xw:0.752xh;0,0.115xh&resize=1200:*"
        alt="Recipe image"
      />
    </div>
    <div class="top-rhs">
      <h1 class="recipe-title">{{this.recipe_title}}</h1>
      <h3 class="recipe-author">By
        {{user.first_name}}</h3>
      <br />
      <div class="recipe-info">
        <h5 class="recipe-info-box">
          Cooking time:
          {{this.recipe_cooking_time}}
          minutes</h5>
        <h5 class="recipe-info-box"> Serves {{this.recipe_serves}}</h5>
      </div>
      <div class="recipe-summary">
        <p class="recipe-summary-body">
          <h4>SUMMARY</h4>
          {{this.recipe_summary}}
        </p>
      </div>
    </div>
    <br />
  </section>
  <section class="recipe-bottom">
    <div class="ingredients">
      <h4>INGREDIENTS</h4>
      <ul class="ingredients-list">
        {{#each this.recipe_ingredients}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
    <div class="recipe-method">
      <h4>METHOD</h4>
      <ul class="method-list">
        {{#each this.recipe_method}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>

  </section>

</div>