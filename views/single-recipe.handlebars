<div class="single-recipe-box">
  <section class="recipe-top">
    <div class="recipe-image-box">
      <img
        class="recipe-image"
        src="https://hips.hearstapps.com/hmg-prod.s3.amazonaws.com/images/goulash-1640024815.jpeg?crop=1.00xw:0.752xh;0,0.115xh&resize=1200:*"
        alt="Recipe image"
      />
    </div>
    <div class="recipe-nav-wrap">
      <div class="recipe-nav">
        <div class="recipe-nav-container">
          <div class="recipe-buttons">
            <a
              class="recipe-nav-button active"
              href="#overview-link"
              class="navbar-item"
            >Overview</a>
            <a
              class="recipe-nav-button"
              href="#ingredients-link"
              class="navbar-item"
            >Ingredients</a>
            <a
              class="recipe-nav-button"
              href="#method-link"
              class="navbar-item"
            >Method</a>
          </div>
          <div class="recipe-nav-sharing">
            <div class="recipe-sharing-links">
              <ul>
                <li>
                  <a
                    href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2F"
                    title="Share On Facebook"
                    target="_blank"
                    class="social-icon social-icon--facebook"
                  ></a>
                </li>
              </ul>
            </div>
            <div class="sharing-icons">

            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="top-rhs" id="overview-link">
      <h1 class="recipe-title">{{recipe_title}}</h1>
      <h3 class="recipe-author">
        By
        <a href="/user/?user_id={{user_id}}" id="recipe-user-name">
          {{user.username}}</a></h3>
      <br />
      <div class="recipe-info">
        <h5 class="recipe-info-box">
          Cooking time:
          {{recipe_cooking_time}}
          minutes</h5>
        <h5 class="recipe-info-box"> Serves {{recipe_serves}}</h5>
      </div>
      <div class="recipe-summary">
        <p class="recipe-summary-body">
          <h4>SUMMARY</h4>
          {{recipe_summary}}
        </p>
      </div>
    </div>
    <br />
  </section>
  <section class="recipe-bottom">
    <div class="ingredients" id="ingredients-link">
      <h4>INGREDIENTS</h4>
      <ul class="ingredients-list">
        {{#each recipe_ingredients}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
    <div class="recipe-method" id="method-link">
      <h4>METHOD</h4>
      <ol class="method-list">
        {{#each recipe_method}}
          <li>{{this}}</li>
        {{/each}}
      </ol>
    </div>

  </section>

</div>
<script src="/js/single-recipe.js"></script>